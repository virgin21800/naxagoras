<header>
	<div class="masthead text-center">
		<a class="navbar-brand" href="/">
			<img src="{{ asset('img/naxagoras.png') }}" width="100%" class="d-inline-block align-top mx-3"
				alt="Naxagoras-Technology'">
		</a>
	</div>
	<!-- La barre de navigation -->
	<nav class="navbar navbar-fixed-top navbar-expand-lg navbar-light z-depth-2 mb-5">
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
			aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav mx-auto">
				{% for menuitem in menu %}
				{% if menuitem.enfants|length > 0 and menuitem.parent is null %}
				<li class="nav-item mx-1 dropdown">
					<a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown"
						aria-haspopup="true" aria-expanded="false">
						{{ menuitem.nom }}
					</a>
					<ul class="dropdown-menu">
						{% for item in menuitem.enfants %}
						{% if item.enfants|length > 0 %}
						<li class="dropdown-submenu">
							<a class="dropdown-item dropdown-toggle" href="#">
							{{ item.nom }}
							</a>
							<ul class="dropdown-menu">
								{% for link in item.enfants %}
								{% if link.enfants|length > 0 %}
								<li class="dropdown-submenu">
									<a class="dropdown-item dropdown-toggle" href="#">
									{{ link.nom }}
									</a>
									<ul class="dropdown-menu">
									{% for i in link.enfants %}
										<li>
											<a class="dropdown-item" href="{{ menuitem.route }}{{ item.route }}{{ link.route }}{{ i.route }}">{{ i.nom }}</a>
										</li>
									{% endfor %}
									</ul>
								</li>
								{% elseif link.enfants|length == 0 %}
								<li><a class="dropdown-item" href="{{ menuitem.route }}{{ item.route }}{{ link.route }}">{{ link.nom }}</a></li>
								{% endif %}
								{% endfor %}
							</ul>
						</li>
						{% elseif item.enfants|length == 0 %}
							<li class="nav-item mx-1"><a class="nav-link" href="{{ menuitem.route }}{{ item.route }}">{{ item.nom }}</a>
							</li>
						{% endif %}
						{% endfor %}
					</ul>
				</li>
				{% elseif menuitem.parent is null %}
				<li class="nav-item mx-1"><a class="nav-link" href="{{ menuitem.route }}">{{ menuitem.nom }}</a></li>
				{% endif %}
				{% endfor %}
			</ul>
		</div>
	</nav>
	{# {{ dump(menu) }} #}
</header>